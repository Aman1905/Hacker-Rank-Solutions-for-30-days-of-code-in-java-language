Solution :-

import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        
        Scanner sc = new Scanner(System.in);
        
        int T = sc.nextInt();
        //taking user input for test cases
        
        String S;
        //defining a string varible S
        
        for (int i=0; i<T; i++) //iterating through the no of test cases given by user {
        
            S = sc.next();
            // taking user input of the strings
            //that no. of times defined by user (T)
            
            for (int j=0; j<S.length(); j++) //iterating through each letter ofString S {
                
                if (j%2 == 0) {
                   System.out.print(S.charAt(j));
                   //The charAt() method returns the character at the specified index in a string.
                }
                
            }
            
            System.out.print(" ");
            
            for (int j=0; j<S.length(); j++) //iterating through each letter ofString S {
                
                if (j%2 == 1) {
                    System.out.print(S.charAt(j));
                }
                
            }
            
            System.out.println();
            
        }
        
    }
}
